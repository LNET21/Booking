@model IEnumerable<Booking.Core.Models.Entities.GymClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div id="createajax"></div>

<div>
    <a asp-action="Create">Create Original</a>

    <a asp-action="Create" class="btn btn-dark"
       data-ajax="true"
       data-ajax-method="GET"
       data-ajax-update="#createajax"
       data-ajax-mode="replace"
       data-ajax-success="fixvalidation"
       >Create Ajax</a>

    <p id="ajax" class="btn btn-dark">Ajax manuellt</p>
    <p id="fetch" class="btn btn-dark">Fetch</p>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="gymclasses">
        <partial name="GymClassesPartial" />
    </tbody>
</table>
