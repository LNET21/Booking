@model IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div id="createajax"></div>

@if (User.IsInRole("Admin"))
{

    <div>
        <a asp-action="Create">Create Original</a>

        <a asp-action="Create" class="btn btn-dark"
           data-ajax="true"
           data-ajax-method="GET"
           data-ajax-update="#createajax"
           data-ajax-mode="replace"
           data-ajax-success="fixvalidation">Create Ajax</a>

        <p id="ajax" class="btn btn-dark">Ajax manuellt</p>
        <p id="fetch" class="btn btn-dark">Fetch</p>
    </div>

    <form asp-action="Index">
        <dl class="row">
            <dt class="col-sm-10">History</dt>
            <dd class="col-sm-2">
                <input class="form-control" type="checkbox" asp-for="ShowHistory" id="checkbox" />
            </dd>
        </dl>
    </form>
}

<table class="table">
    <thead>
        <tr>
            <th>    @Html.DisplayNameFor(model => model.GymClasses.FirstOrDefault().Name)       </th>
            <th>    @Html.DisplayNameFor(model => model.GymClasses.FirstOrDefault().StartDate)  </th>
            <th>    @Html.DisplayNameFor(model => model.GymClasses.FirstOrDefault().Duration)   </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="gymclasses">
        <partial name="GymClassesPartial" model="@Model.GymClasses" />
    </tbody>
</table>
